{
  "dataset_reader": {
    "type": "atis",
    "database_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/atis/atis.db",
    "max_action_sequence_length_train": 250,
    "num_turns_to_concatenate": 3,
    "remove_meaningless_conditions": true,
    "anonymize_entities": true,
    "copy_actions": true
  },
  "validation_dataset_reader": {
    "type": "atis",
    "database_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/atis/atis.db",
    "keep_if_unparseable": true,
    "num_turns_to_concatenate": 3,
    "remove_meaningless_conditions": true,
    "anonymize_entities": true,
    "copy_actions": true,
    "linking_weight": 1
  },
  "train_data_path": "allennlp/tests/fixtures/data/atis/sample.json",
  "validation_data_path": "allennlp/tests/fixtures/data/atis/sample.json",
  "model": {
    "type": "atis_parser",
    "utterance_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 20,
        "trainable": true,
        "sparse": true
      }
    },
    "action_embedding_dim": 10,
    "mixture_feedforward": {
      "input_dim": 80,
      "num_layers": 3,
      "hidden_dims": [5, 2, 1],
      "activations": ["relu", "sigmoid", "sigmoid"],
      "dropout": [0.2, 0.0, 0.0]
    },
    "encoder": {
      "type": "lstm",
      "input_size": 40,
      "hidden_size": 40,
      "bidirectional": true,
      "num_layers": 1
    },
    "copy_action_encoder" :{
        "type": "lstm",
        "input_size": 10,
        "hidden_size": 11,
        "bidirectional": false 
    },
    "output_copy_action_encoder" :{
        "type": "boe",
        "embedding_dim": 11
    },
    "decoder_beam_search": {
    "beam_size": 5
    },
    "decoder_num_layers": 1,
    "max_decoding_steps": 10,
    "input_attention": {"type": "dot_product"},
    "dropout": 0.5,
    "initializer": [
      [".*projection_layer.*weight", {"type": "xavier_uniform"}],
      [".*projection_layer.*bias", {"type": "zero"}],
      [".*weight_ih.*", {"type": "xavier_uniform"}],
      [".*weight_hh.*", {"type": "orthogonal"}],
      [".*bias_ih.*", {"type": "zero"}],
      [".*bias_hh.*", {"type": "lstm_hidden_bias"}]
  ],
    "database_file": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/atis/atis.db"
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["utterance", "num_tokens"]],
    "padding_noise": 0.0, 
    "batch_size" : 5
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 5,
    "cuda_device": -1,
    "optimizer": {
      "type": "dense_sparse_adam"
    }
  }
}
