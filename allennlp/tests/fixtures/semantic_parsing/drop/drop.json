{
  "dataset_reader": {
    "type": "drop"
  },
  "train_data_path": "allennlp/tests/fixtures/data/drop/sample.json",
  "validation_data_path": "allennlp/tests/fixtures/data/drop/sample.json",
  "model": {
    "type": "drop-nmn",
    "utterance_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 20,
          "trainable": true
        }
      }
    },
    "action_embedding_dim": 10,
    "encoder": {
      "type": "lstm",
      "input_size": 20,
      "hidden_size": 40,
      "bidirectional": true,
      "num_layers": 1
    },
    "decoder_beam_search": {
    "beam_size": 5
    },
    "decoder_num_layers": 2,
    "max_decoding_steps": 10,
    "input_attention": {"type": "dot_product"},
    "dropout": 0.5
  },
  "iterator": {
    "type": "basic",
    "batch_size" : 4
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 5,
    "cuda_device": -1,
    "optimizer": {
      "type": "sgd",
      "lr": 0.1
    }
  }
}
