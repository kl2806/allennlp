{
  "dataset_reader": {
    "type": "drop",
    "do_augmentation": false
  },
  "train_data_path": "allennlp/tests/fixtures/data/drop.json",
  "validation_data_path": "allennlp/tests/fixtures/data/drop.json",
  "model": {
    "type": "drop-nmn",
    "question_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 20,
          "trainable": true
        }
      }
    },
    "passage_embedder": {
      "token_embedders": {
        "tokens": {
          "type": "embedding",
          "embedding_dim": 20,
          "trainable": true
        }
      }
    },
    "action_embedding_dim": 10,
    "passage_encoder": {
      "type": "lstm",
      "input_size": 20,
      "hidden_size": 40,
      "bidirectional": true,
      "num_layers": 1
    },
    "question_encoder": {
      "type": "lstm",
      "input_size": 20,
      "hidden_size": 40,
      "bidirectional": true,
      "num_layers": 1
    },
    "decoder_beam_search": {
    "beam_size": 5
    },
    "max_decoding_steps": 10,
    "attention": {"type": "dot_product"},
    "dropout": 0.5
  },
  "iterator": {
    "type": "basic",
    "batch_size" : 2
  },
  "trainer": {
    "num_epochs": 2,
    "patience": 5,
    "cuda_device": -1,
    "optimizer": {
      "type": "sgd",
      "lr": 0.1
    }
  }
}
