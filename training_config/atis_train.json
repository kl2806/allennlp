{
  "dataset_reader": {
    "type": "atis",
    "database_file": "/atis/atis.db",
    "max_action_sequence_length_train": 300,
    "num_turns_to_concatenate": 1, 
    "remove_meaningless_conditions": false,
    "anonymize_entities": true,
    "copy_actions": false,
    "linking_weight": 1
  },
  "validation_dataset_reader": {
    "type": "atis",
    "database_file": "/atis/atis.db",
    "num_turns_to_concatenate": 1,
    "remove_meaningless_conditions": true,
    "anonymize_entities": false,
    "keep_if_unparseable": true,
    "copy_actions": false
  },
  "train_data_path": "/atis/train.json",
  "validation_data_path": "/atis/dev.json",
  "model": {
    "type": "atis_parser",
    "utterance_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 400,
        "trainable": true,
        "sparse": true
      }
    },
    "action_embedding_dim": 800,
    "encoder": {
      "type": "lstm",
      "input_size": 400,
      "hidden_size": 800,
      "bidirectional": true,
      "num_layers": 1
    },
    "copy_action_encoder" :{
        "type": "lstm",
        "input_size": 800,
        "hidden_size": 801,
        "bidirectional": true 
    },
    "output_copy_action_encoder" :{
        "type": "lstm",
        "input_size": 800,
        "hidden_size": 801,
        "bidirectional": true 
    },
    "decoder_beam_search": {
    "beam_size": 10
    },
    "training_beam_size": 1,
    "decoder_num_layers": 1,
    "max_decoding_steps": 300,
    "input_attention": {"type": "dot_product"},
    "dropout": 0.5,
     "initializer": [
      [".*projection_layer.*weight", {"type": "xavier_uniform"}],
      [".*projection_layer.*bias", {"type": "zero"}],
      [".*weight_ih.*", {"type": "xavier_uniform"}],
      [".*weight_hh.*", {"type": "orthogonal"}],
      [".*bias_ih.*", {"type": "zero"}],
      [".*bias_hh.*", {"type": "lstm_hidden_bias"}]
  ],
    "database_file": "/atis/atis.db",
     "link_embedding": false
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["utterance", "num_tokens"]],
    "padding_noise": 0.0,
    "batch_size" : 32
  },
  "trainer": {
    "num_epochs": 35,
    "patience": 10,
    "cuda_device": 0,
    "validation_metric": "+denotation_acc",
    "optimizer": {
      "type": "dense_sparse_adam"
    }
}
}


